{
  "version": "1.0.0",
  "name": "Sample IC Evaluation Board",
  "description": "Register map for sample IC with voltage control and status monitoring",
  "defaultSlaveAddress": "0x50",
  "registers": [
    {
      "address": "0x00",
      "name": "Device ID",
      "description": "Read-only device identification register",
      "type": "indicator",
      "writable": false,
      "format": "hex"
    },
    {
      "address": "0x01",
      "name": "Status Register",
      "description": "Current device status flags",
      "type": "indicator",
      "writable": false,
      "format": "binary"
    },
    {
      "address": "0x10",
      "name": "Control Register",
      "description": "Main control register with 8 configurable bits",
      "type": "byte",
      "writable": true
    },
    {
      "address": "0x12",
      "name": "Output Voltage",
      "description": "Configure output voltage level",
      "type": "slider",
      "bits": [0, 1, 2, 3],
      "min": 3.5,
      "max": 5.0,
      "step": 0.1,
      "unit": "V",
      "formula": "3.5 + (value / 15) * 1.5",
      "writable": true
    },
    {
      "address": "0x13",
      "name": "Current Limit",
      "description": "Configure current limit",
      "type": "slider",
      "bits": [0, 1, 2, 3, 4],
      "min": 0,
      "max": 3000,
      "step": 100,
      "unit": "mA",
      "formula": "value * 100",
      "writable": true
    },
    {
      "address": "0x20",
      "name": "Operating Mode",
      "description": "Select device operating mode",
      "type": "combobox",
      "bits": [0, 1, 2],
      "writable": true,
      "options": [
        {
          "value": 0,
          "label": "Sleep Mode",
          "description": "Minimal power consumption"
        },
        {
          "value": 1,
          "label": "Normal Mode",
          "description": "Standard operation"
        },
        {
          "value": 2,
          "label": "High Performance",
          "description": "Maximum performance"
        },
        {
          "value": 3,
          "label": "Low Power",
          "description": "Reduced power consumption"
        }
      ]
    },
    {
      "address": "0x21",
      "name": "Clock Source",
      "description": "Select clock source",
      "type": "combobox",
      "writable": true,
      "options": [
        {
          "value": 0,
          "label": "Internal Oscillator",
          "description": "Use internal RC oscillator"
        },
        {
          "value": 1,
          "label": "External Crystal",
          "description": "Use external crystal oscillator"
        },
        {
          "value": 2,
          "label": "External Clock",
          "description": "Use external clock input"
        }
      ]
    },
    {
      "address": "0x30",
      "name": "GPIO Control",
      "description": "General purpose I/O configuration",
      "type": "byte",
      "writable": true
    },
    {
      "address": "0x31",
      "name": "GPIO Status",
      "description": "Current GPIO pin states",
      "type": "indicator",
      "writable": false,
      "format": "binary"
    }
  ]
}
